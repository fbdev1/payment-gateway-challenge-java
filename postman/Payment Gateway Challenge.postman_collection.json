		{
			"name": "POST authorised",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if(pm.response.code === 200){",
							"    const responseBody = JSON.parse(pm.response.text())",
							"    pm.globals.set('paymentId', responseBody.id);",
							"}",
							"",
							"let jsonData = pm.response.json();",
							"let requestBody = JSON.parse(pm.request.body.raw);",
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response time < 500ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(500);",
							"});",
							"",
							"pm.test(\"Content-Type is JSON\", function () {",
							"    pm.expect(pm.response.headers.get(\"Content-Type\"))",
							"        .to.include(\"application/json\");",
							"});",
							"",
							"pm.test(\"Response has required fields\", function () {",
							"    pm.expect(jsonData).to.have.property(\"id\");",
							"    pm.expect(jsonData).to.have.property(\"status\");",
							"    pm.expect(jsonData).to.have.property(\"cardNumberLastFour\");",
							"    pm.expect(jsonData).to.have.property(\"expiryMonth\");",
							"    pm.expect(jsonData).to.have.property(\"expiryYear\");",
							"    pm.expect(jsonData).to.have.property(\"currency\");",
							"    pm.expect(jsonData).to.have.property(\"amount\");",
							"});",
							"",
							"pm.test(\"Payment status is Authorized\", function () {",
							"    pm.expect(jsonData.status).to.eql(\"Authorized\");",
							"});",
							"",
							"pm.test(\"Card last four digits are correct\", function () {",
							"    const lastFour = requestBody.cardNumber.slice(-4);",
							"    pm.expect(jsonData.cardNumberLastFour).to.eql(lastFour);",
							"});",
							"",
							"pm.test(\"Expiry month matches request\", function () {",
							"    pm.expect(jsonData.expiryMonth).to.eql(requestBody.expiryMonth);",
							"});",
							"",
							"pm.test(\"Expiry year matches request\", function () {",
							"    pm.expect(jsonData.expiryYear).to.eql(requestBody.expiryYear);",
							"});",
							"",
							"pm.test(\"Currency matches request\", function () {",
							"    pm.expect(jsonData.currency).to.eql(requestBody.currency);",
							"});",
							"",
							"pm.test(\"Amount matches request\", function () {",
							"    pm.expect(jsonData.amount).to.eql(requestBody.amount);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
